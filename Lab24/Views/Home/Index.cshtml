@{
    ViewBag.Title = "Home Page";
}
<br /> <br />
@*add search bar*@
<form action="/Home/SearchItemByName" method="get">
    <label class="form-control">Item Name</label>
    <input type="text" name="Name" class="form-control" />
    <input type="submit" value="Search"/>
</form>

<br /><br />
<a href="/Home/NewItem">Add new Item</a>
<br /><br />
<table border="1" class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    @foreach (var Item in ViewBag.Items)
    {
    <tr>
        <td>@Item.Name</td>
        <td>@Item.Description</td>
        <td>@Item.Quantity</td>
        <td>@Item.Price</td>
        <td><a href="/Home/ItemDetails?ItemID=@Item.ItemID" onclick="return confirm('Are you sure?')"/>Edit</td>
        <td><a href="/Home/DeleteItem?ItemID=@Item.ItemID" onclick="return confirm('Are you sure?')"/>Delete</td>
    </tr>
    }
</table>